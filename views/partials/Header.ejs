<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Header</title>

  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet" />
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="styles/main.css">
  
</head>

<body>
  <main>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary navbar-fixed" style="font-size:18px;">
    <!-- Container wrapper -->
    <div class="container-fluid">
      <!-- Collapsible wrapper -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- Navbar brand -->
        <a class="navbar-brand mt-2 mt-lg-0" href="#">
          <img src="https://seeklogo.com/images/B/blogger_B-logo-47610B2F87-seeklogo.com.png" height="30px" alt="Logo"
            loading="lazy" />
        </a>
        <!-- Left links -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 px-1">
          <li class="nav-item">
            <a class="nav-link px-2" href="/homepage">Home</a>
          </li>
          <li class="nav-item px-2">
            <a class="nav-link" href="/myBlog/:id">MyBlog</a>
          </li>
          <li class="nav-item px-0">
            <a class="nav-link" href="/favorites">MyFavorite</a>
          </li>

          <li class="nav-item dropdown">
            <a data-mdb-dropdown-init class="nav-link dropdown-toggle px-3" href="#" id="navbarDropdownMenuLink"
              role="button" aria-expanded="false">
              BlogType
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" style="font-size:18px;">
              <li>
                <a class="dropdown-item" href="/types/Type1">Type1</a>
              </li>
              <li>
                <a class="dropdown-item" href="/types/Type2">Type2</a>
              </li>
              <li>
                <a class="dropdown-item" href="/types/Type3">Type3</a>
              </li>
            </ul>
          </li>
        </ul>

        <!--Search bar-->
        <div class="container-fluid search">
          <form class="d-flex input-group w-auto search" action="/search" method="POST">
            <input type="search" class="form-control rounded" placeholder="Search by authors" aria-label="Search"
              aria-describedby="search-addon" style="font-size:18px;" id="search" name="author"/>
            <span class="input-group-text border-0" id="search-addon">
              <button type="submit" style="background: none; border: none; cursor: pointer;">
                <i class="fas fa-search"></i>
              </button>
            </span>
          </form>
        </div>
        
      </div>

      <!-- Right elements -->
      <div class="d-flex align-items-center">
        <a data-mdb-ripple-init type="button" class="btn btn-primary me-3" style="font-size:16px;" href="/login">
          Log out
        </a>
      </div>
  </nav>
  <!-- Navbar -->

  <!-- Link to MDB -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.umd.min.js"></script>

  <script>
    // Add a class to the body when the window is scrolled to adjust padding
    $(window).scroll(function () {
      if ($(this).scrollTop() > 0) {
        $('body').addClass('with-fixed-navbar');
      } else {
        $('body').removeClass('with-fixed-navbar');
      }
    });
  </script>